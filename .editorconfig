root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120

[*.php]
tab_width = 4
indent_size = 4

[*.html]
tab_width = 4
indent_size = 4

[*.xml]
tab_width = 4
indent_size = 4

[*.yml]
tab_width = 4
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4
indent_size = 4

[*.md]
trim_trailing_whitespace = false
